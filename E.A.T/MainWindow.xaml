<Window x:Class="E.A.T.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
        xmlns:local="clr-namespace:E.A.T"
        mc:Ignorable="d"
        Title="E.A.T."
        WindowStartupLocation="CenterScreen"
        Height="641.716"
        Width="800"
        
        PreviewKeyDown="MainWindow_OnPreviewKeyDown"
        PreviewKeyUp="MainWindow_OnPreviewKeyUp"
        
        >
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed" />
        <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed" />
    </Window.CommandBindings>

    <Window.Resources>
        <ResourceDictionary>
            <Style x:Key="RectGaze">
                <Style.Triggers>
                    <Trigger Property="wpf:Behaviors.HasGaze" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                    From="LightSkyBlue" To="DeepSkyBlue" Duration="0:0:.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                        From="DeepSkyBlue" To="LightSkyBlue" Duration="0:0:.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ActiRect">
                <Style.Triggers>
                    <Trigger Property="wpf:Behaviors.HasActivationFocus" Value="True">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                                    From="LightSkyBlue" To="Orange" Duration="0:0:.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                        <Trigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(Rectangle.Fill).(SolidColorBrush.Color)"
                                        From="Orange" To="LightSkyBlue" Duration="0:0:.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="0,0,0,-6">
        <RichTextBox x:Name="TextEdit" HorizontalAlignment="Left" Height="349" Margin="332,212,0,0" VerticalAlignment="Top" Width="450" VerticalScrollBarVisibility="Auto"
                 wpf:Behaviors.IsGazeAware="True"
                     SpellCheck.IsEnabled="True" Language="en-EN" Grid.ColumnSpan="2"
                     FontFamily="Calibri"
                     />
        <Button x:Name="SpellButton" Click="SpellButton_Click" Content="SpellCheck" HorizontalAlignment="Left" Margin="222.367,566,0,0" VerticalAlignment="Top" Width="91" Height="29" Grid.Column="1"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="1" Margin="0,87,0,0" Stroke="Black" VerticalAlignment="Top" Width="792" RenderTransformOrigin="0.5,0.5"/>
        <Grid HorizontalAlignment="Left" Height="87" Margin="-4,0,0,0" VerticalAlignment="Top" Width="796" Background="LightGray" Grid.ColumnSpan="2" >
            <TextBlock HorizontalAlignment="Left" Margin="11,10,0,0" TextWrapping="Wrap" Text="File" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="41,37,0,0" TextWrapping="Wrap" Text="Save" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="41,61,0,0" TextWrapping="Wrap" Text="Open" VerticalAlignment="Top"/>
            <Button Command="ApplicationCommands.Open" Margin="10,59,760,6">
                <Image Source="/Media/Images/folder.png" Width="16" Height="16" />
            </Button>
            <Button Command="ApplicationCommands.Save" Margin="10,31,760,31">
                <Image Source="/Media/Images/disk.png" Width="16" Height="16" RenderTransformOrigin="-1.333,0.896" />
            </Button>
            <Rectangle Fill="Black" HorizontalAlignment="Left" Height="87" Margin="75,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="1"/>

            <TextBlock HorizontalAlignment="Left" Margin="81,13,0,0" TextWrapping="Wrap" Text="Style" VerticalAlignment="Top"/>
            <ComboBox x:Name="font" HorizontalAlignment="Left" Height="19" Margin="81,34,0,0" VerticalAlignment="Top" Width="100"
                      DropDownClosed="font_DropDownClosed">
                <ComboBoxItem x:Name="Arial" FontFamily="Arial">Arial</ComboBoxItem>
                <ComboBoxItem x:Name="ArialBlack" FontFamily="Arial Black">Arial Black</ComboBoxItem>
                <ComboBoxItem x:Name="Calibri" IsSelected="True" FontFamily="Calibri">Calibri</ComboBoxItem>
                <ComboBoxItem x:Name="Times" FontFamily="Times New Roman">Times New Roman</ComboBoxItem>
            </ComboBox>



        </Grid>
    </Grid>
</Window>
